{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020", // Updated to es2020 for better Node.js compatibility
    "skipLibCheck": true, // Added to avoid issues with third-party packages
    "rootDir": "src" // Explicitly set rootDir
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    // Added exclude
    "node_modules"
  ]
}
